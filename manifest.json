{
  "manifest_version": 3,
  "name": "ESPN NBA Boxscore Fix",
  "version": "1.2",
  "description": "Restores the classic stat column order on ESPN NBA and WNBA boxscore pages.",
    "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "run_at": "document_end",
      "matches": [
        "https://www.espn.com/nba/boxscore*",
        "https://www.espn.com/nba-summer-league/boxscore*",
        "https://www.espn.com/nba-g-league/boxscore*",
        "https://www.espn.com/wnba/boxscore*",
        "https://www.espn.com/mens-college-basketball/boxscore*",
        "https://www.espn.com/womens-college-basketball/boxscore*",
        "https://www.espn.co.uk/nba/boxscore*",
        "https://www.espn.co.uk/wnba/boxscore*",
        "https://www.espn.co.uk/mens-college-basketball/boxscore*",
        "https://www.espn.co.uk/womens-college-basketball/boxscore*",
        "https://www.espn.com.au/nba/boxscore*",
        "https://www.espn.com.au/wnba/boxscore*",
        "https://www.espn.com.au/mens-college-basketball/boxscore*",
        "https://www.espn.com.au/womens-college-basketball/boxscore*"
      ]
    }
  ]
}
